#include <iostream>
#include <cmath>

using namespace std;

int main()  //a1 * x + b1 * y = c1
			      //a2 * x + b2 * y = c2
{
	float a1;
	float b1;
	float c1;
	float a2;
	float b2;
	float c2;
	cout << "enter a1 - ";
	cin >> a1;
	cout << "enter b1 - ";
	cin >> b1;
	cout << "enter c1 - ";
	cin >> c1;
	cout << "enter a2 - ";
	cin >> a2;
	cout << "enter b2 - ";
	cin >> b2;
	cout << "enter c2 - ";
	cin >> c2;
	float k = -(b2 / b1);
	a1 *= k;
	c1 *= k;
	b1 *= k;
	float a = a1 + a2;
	float b = b1 + b2; //b = 0
	float c = c1 + c2; //ax = c
	float x = c / a;
	float y = (c2 - a2 * x) / b2;
	cout << "x = " << x << endl << "y = " << y;
}
